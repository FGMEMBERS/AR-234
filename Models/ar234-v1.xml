<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <!-- Le fuselage -->
  <model>
    <path>Aircraft/AR-234/Models/ar234.xml</path>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
      <pitch-deg> 0.000 </pitch-deg>
    </offsets>
  </model>

  <!-- Les patins -->
  <model>
    <path>Aircraft/AR-234/Models/patins.xml</path>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
      <pitch-deg> 0.000 </pitch-deg>
    </offsets>
  </model>

  <!-- Le chariot -->
  <model>
    <path>Aircraft/AR-234/Models/chariot.xml</path>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
      <pitch-deg> 0.000 </pitch-deg>
    </offsets>
  </model>

  <!-- Effets sur le sol -->
  <!-- Roue avant -->
  <model>
    <path>Aircraft/AR-234/Models/Effects/ground/ground2.xml</path>
    <offsets>
      <x-m> -5.185 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -2.920 </z-m>
    </offsets>
  </model>

  <!-- Roue gauche -->
  <model>
    <path>Aircraft/AR-234/Models/Effects/ground/ground0.xml</path>
    <offsets>
      <x-m> -0.748 </x-m>
      <y-m> -1.458 </y-m>
      <z-m> -2.906 </z-m>
    </offsets>
  </model>

  <!-- Roue droite -->
  <model>
    <path>Aircraft/AR-234/Models/Effects/ground/ground1.xml</path>
    <offsets>
      <x-m> -0.748 </x-m>
      <y-m>  1.458 </y-m>
      <z-m> -2.906 </z-m>
    </offsets>
  </model>

  <!-- Une ombre pour OSG -->
  <model>
    <name>shadowOSG</name>
    <path>Aircraft/AR-234/Models/shadowV1.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>shadowOSG</object-name>
    <condition>
      <equals>
        <property>sim[0]/rendering/shadows-ai</property>
        <value>true</value>
      </equals>
    </condition>
  </animation>

</PropertyList>
