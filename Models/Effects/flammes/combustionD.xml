<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>combustion.ac</path>
  
  <animation>
    <object-name>ReheatInner</object-name>
    <object-name>ReheatOuter</object-name>
    <object-name>ExternalFlame</object-name>
  </animation>
  
  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>ReheatInner</object-name>
    <object-name>ReheatOuter</object-name>
    <object-name>ExternalFlame</object-name>   
  </effect>
  
  <animation>
    <type>select</type>
    <object-name>ReheatInner</object-name>
    <object-name>ReheatOuter</object-name>
    <object-name>ExternalFlame</object-name>
    <condition>
      <greater-than>
        <!-- controls/engines/engine[1]/throttle -->
        <property>sim/multiplay/generic/float[15]</property>
        <value> 0.2 </value>
      </greater-than>
    </condition>
  </animation>
  
  <animation>
    <type>scale</type>
    <object-name>ExternalFlame</object-name>
    <!-- controls/engines/engine[1]/throttle -->
    <property>sim/multiplay/generic/float[15]</property>
    <x-min>0.2</x-min>
    <y-min>0.9</y-min>
    <z-min>0.9</z-min>
    <x-factor>1.30</x-factor>
    <y-factor>0.25</y-factor>
    <z-factor>0.25</z-factor>
  </animation>
  
  <animation>
    <object-name>ExternalFlame</object-name>
    <type>spin</type>
    <!-- engines/engine[1]/n2 -->
    <property>sim/multiplay/generic/float[5]</property>
    <factor> 240 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>spin</type>
    <object-name>ReheatOuter</object-name>
    <object-name>ReheatInner</object-name>
    <!-- engines/engine[0]/n2 -->
    <property>sim/multiplay/generic/float[4]</property>
    <factor> 437 </factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <!-- #####################################################
       ## New light effect by 5H1N0B1. Wow ! Thank to him ##
       ################NIGHT FLAMME ########################-->
  <animation>
    <type>material</type>
    <object-name>ReheatInner</object-name>
    <condition>
      <greater-than>
        <property>sim/time/sun-angle-rad</property>
        <value> 1.7 </value>
      </greater-than>
    </condition>
    <emission>
      <red>  0.5 </red>
      <blue> 1.0 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>ReheatOuter</object-name>
    <condition>
      <greater-than>
        <property>sim/time/sun-angle-rad</property>
        <value> 1.7 </value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.85 </red>
      <green> 0.70 </green>
      <blue>  1.00 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>ExternalFlame</object-name>
    <condition>
      <greater-than>
        <property>sim/time/sun-angle-rad</property>
        <value> 1.7 </value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.95 </red>
      <green> 0.90 </green>
      <blue>  1.00 </blue>
    </emission>
  </animation>
  
  <!-- ################# DAY FLAMME ########################-->
  <animation>
    <type>material</type>
    <object-name>ReheatInner</object-name>
    <condition>
      <less-than>
        <property>sim/time/sun-angle-rad</property>
        <value> 1.3 </value>
      </less-than>
    </condition>
    <emission>
      <red>  1.0 </red>
      <blue> 0.4 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>ReheatOuter</object-name>
    <condition>
      <less-than>
        <property>sim/time/sun-angle-rad</property>
        <value> 1.3 </value>
      </less-than>
    </condition>
    <emission>
      <red>   1.0 </red>
      <green> 0.3 </green>
    </emission>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>ExternalFlame</object-name>
    <condition>
      <less-than>
        <property>sim/time/sun-angle-rad</property>
        <value> 1.3 </value>
      </less-than>
    </condition>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
    </emission>
  </animation>
  
  <!-- ################# DUSK FLAMME #######################--> 
  <animation>
    <type>material</type>
    <object-name>ReheatInner</object-name>
    <condition>
      <and>
        <less-than>
          <property>sim/time/sun-angle-rad</property>
          <value> 1.7 </value>
        </less-than>
        <greater-than>
          <property>sim/time/sun-angle-rad</property>
          <value> 1.3 </value>
        </greater-than>
      </and>
    </condition>
    <emission>
      <red>  1.0 </red>
      <blue> 0.4 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>ReheatOuter</object-name>
    <condition>
      <and>
        <less-than>
          <property>sim/time/sun-angle-rad</property>
          <value> 1.7 </value>
        </less-than>
        <greater-than>
          <property>sim/time/sun-angle-rad</property>
          <value> 1.3 </value>
        </greater-than>
      </and>
    </condition>
    <emission>
      <red>   1.0 </red>
      <green> 0.3 </green>
    </emission>
  </animation>  
  
  <animation>
    <type>material</type>
    <object-name>ExternalFlame</object-name>
    <condition>
      <and>
        <less-than>
          <property>sim/time/sun-angle-rad</property>
          <value> 1.7 </value>
        </less-than>
        <greater-than>
          <property>sim/time/sun-angle-rad</property>
          <value> 1.3 </value>
        </greater-than>
      </and>
    </condition>
    <emission>
      <red>   1.0 </red>
      <green> 0.3 </green>
      <blue>  0.2 </blue>
    </emission>
  </animation>  
  
</PropertyList>
